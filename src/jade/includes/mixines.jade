//-Menu Autos
mixin menu-autos(arreglo)
	.menu-autos
		div
			.regresar Modelos
			ul
				each val, index in arreglo
					-var ind = index +1
					li
						a #{val.familia}
						div
							.container
								h6 #{val.titulo}
								.flex
									each valu in arreglo[index].lista
										div
											a(href="#{valu.urlimg}")
												img(src="images/autos/#{valu.img}")
												img(src="images/autos/#{valu.imghover}").hover
											p #{valu.modelo}
												cite #{valu.slogan}
												span Desde 
													b $#{valu.precio}
											a(href="#{valu.url}").link CONFIGURA

//-Autos
mixin lista-autos(arreglo)
	.lista-autos
		ul
			each val, index in arreglo
				-var ind = index +1		
				li
					a #{val.modelo}							

//-Paginador
mixin paginador(arreglo)
	.paginador
		ul.pagination
			each val, index in arreglo
				-var ind = index +1
				li(class="#{val.clase}")
					a(href="#!") #{val.nombre}
						i(class="#{val.claseIco}") #{val.nombreIco}

//-Links Mapa de Sitio
mixin mapa-de-sitio(arreglo)
	each val, index in arreglo
		-var ind = index +1
		div
			each valu, index1 in arreglo[index].lista
				dl
					dt #{valu.titulo}
					div
						each value in arreglo[index].lista[index1].subLista
							dd #{value.text1}

//-Links Footer
mixin links-footer(arreglo)
	each val, index in arreglo
		-var ind = index +1
		div
			each valu, index1 in arreglo[index].lista
				dl
					dt #{valu.titulo}
					div
						each value in arreglo[index].lista[index1].subLista
							dd
								a(href="#{value.url}") #{value.text1}