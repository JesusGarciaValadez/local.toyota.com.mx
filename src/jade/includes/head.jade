head( lang="es", xml:lang="es")
	title #{titulo}
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

	script(type="application/ld+json").
		{
		"@context": "http://schema.org",
		"@type": "Organization",
		"name" : "Claroshop",
		"url": "http://www.claroshop.com",
		"logo": "http://www.claroshop.com/css/vector/logo.svg",
		"sameAs": [
			"https://www.facebook.com/claroshopmx/",
			"https://twitter.com/claroshop_com/",
			"@claroshop_com",
			"https://www.instagram.com/claroshop_com/"
			]
		}
	script(type="application/ld+json").
		{
		"@context": "http://schema.org",
		"@type": "WebSite",
		"name" : "Claroshop",
		"url": "https://www.claroshop.com",
		"potentialAction": {
			"@type": "SearchAction",
			"target": "http://www.claroshop.com/s/?c={search_term_string}",
			"query-input": "required name=search_term_string"
			}
		}

	//metatags
	meta(name="Description", content="#{descrip}")
	meta(name="Keywords", content="#{keyword}")
	
	// fb
	meta(content='123456789', property='fb:admins')
	meta(content='12345678910', property='fb:app_id')
	
	// apple metatags
	meta(name='apple-mobile-web-app-capable', content="yes")
	meta(name='apple-mobile-web-app-status-bar-style', content="black-translucent")
	
	// iconos
	link(rel="shorcut icon", href="css/img/favicon.ico")
	link(rel="shorcut icon", href="css/img/favicon.png")
	link(rel="apple-touch-icon", href="css/img/icon-touch.png")
	link(rel="apple-touch-icon", sizes="72x72", href="css/img/icon-touch-72.png")
	link(rel="apple-touch-icon", sizes="114x114", href="css/img/icon-touch-114.png")
	link(rel="apple-touch-icon", sizes="144x144", href="css/img/icon-touch-144.png")
	
	// styles
	link(rel="stylesheet", href="css/styles.css", type="text/css")
	<!--[if lte IE 9]>
	script(src='js/html5shiv.js')
	link(rel="stylesheet", href="css/styles-ie.css", type="text/css")
	script(src='js/console-IE8.js', asinc)
	<![endif]-->