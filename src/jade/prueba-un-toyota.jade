								.input-field
									input(type="number" name="tel" required="" aria-required="true" data-msg="Teléfono Obligatorio" data-rule-minlength="10" data-rule-maxlength="10" data-msg-minlength="Mínimo 10 Caracteres" data-msg-maxlength="Máximo 10 Caracteres").validate#tel
									label(for="tel") Teléfono de contacto
								.input-field
									select
										option(value="" disabled selected) Selecciona un modelo
										option(value="1") Yaris
								.input-field
									select
										option(value="" disabled selected) Selecciona una versión
										option(value="1") S CVT
								.contenedor
									.input-field
