										option(value="" disabled selected) Selecciona un modelo
										option(value="1") Yaris
								.input-field
									select
										option(value="" disabled selected) Selecciona una versión
										option(value="1") S CVT
								.contenedor
									.input-field
										select
											option(value="" disabled selected) Fecha
											option(value="1") Viernes, 13 septiembre
									.input-field
										select
											option(value="" disabled selected) Horario
											option(value="1") Matutino
								p
									b Selecciona un distribuidor
								.codigo
									input(type="text" placeholder="Código Postal")
									span
									button(type="reset")
									dl
										dd
											.img
												img(src='images/sucursal/polanco.jpg')
											.info
												i Distribuidor más cercano
												p
													b Toyota Polanco
												p 
													span Lago Alberto 320,  Col. Anzures. México, Distrito Federal
												p (55) 2581 - 1010
										dd
											.img
												img(src='images/sucursal/polanco.jpg')
											.info
												p
